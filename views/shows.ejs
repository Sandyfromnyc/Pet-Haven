<%- include('../partials/header') %>

<section id="show-page">
   
    
    <!-- start sitter list -->
    <div>Sitters Listings:</div>
    <ul>
      <%- sitterListings.map(sitterListings =>
        `<li>${s.name} <small>${s.location()}</small></li>`
      ).join('') %>
    </ul>
    <!-- end sitter list -->
  </section>
  <!-- add to sitter form below this comment -->
  <form id="add-sitter" action="/sitterListings/<%= sitterListing._id %>/sitterListings" method="POST">
    <select name="sitterId">
      <!-- Emit an option for each performer -->
      <%- sitterListings.map(s => 
        `<option value="${s._id}">${s.name}</option>`
      ).join('') %>
    </select>
    <button type="submit">Add Sitter</button>
  </form>
  
  <br><br><h2>Reviews</h2>
  <% if (user) { %>
  <form id="add-review-form" method="POST"
    action="/sitterListings/<%= sitterListing._id %>/reviews">
    <label>Review:</label>
    <textarea name="content"></textarea>
    <label>Rating:</label>
    <select name="rating">
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5" selected>5</option>
    </select>
    <input type="submit" value="Add Review">
  </form>
  <% } %>
  
  <% if (sitterListing.reviews.length) { %>
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Review</th>
          <th>Rating</th>
        </tr>
      </thead>
      <tbody>
        <% let total = 0 %>
        <% sitterListing.reviews.forEach(function(s) { %>
          <% total += s.rating %>
          <tr>
            <td class="review-user"><img alt="avatar" src="<%= r.userAvatar %>" referrerpolicy="no-referrer"> <%= r.userName %></td>
            <td><%= r.createdAt.toLocaleDateString() %></td>
            <td><%= r.content %></td>
            <td><%= r.rating %></td>
            <td>
              <% if (user?._id.equals(r.user)) { %>
                <form action="/reviews/<%= r._id %>?_method=DELETE" method="POST">
                  <button type="submit">X</button>
                </form>
              <% } %>
            </td>
          </tr>
        <% }); %>
        <tr>
          <td colspan="2"></td>
          <td>
            <strong>
              <%= (total / sitterListing.reviews.length).toFixed(1) %>
            </strong>
          </td>
        </tr>
      </tbody>
    </table>
  <% } else { %>
    <h5>No Reviews Yet</h5>
  <% } %>



<%- include('../partials/footer') %>